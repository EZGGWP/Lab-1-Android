<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="90dp"
        android:textSize="40sp">

    </TextView>
    <TextView
        android:id="@+id/loginlabel"
        android:layout_width="wrap_content"
        android:text="Login"
        android:layout_alignStart="@+id/passlabel"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/signin"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:id="@+id/loginfield"
        android:layout_width="200dp"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/loginlabel"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp">

    </EditText>
    <TextView
        android:id="@+id/passlabel"
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_alignBottom="@+id/passfield"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:id="@+id/passfield"
        android:layout_below="@+id/loginfield"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword">

    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/passfield"
        android:layout_marginTop="30dp"
        android:text="Sign In"
        android:layout_height="wrap_content">

    </Button>
</RelativeLayout>